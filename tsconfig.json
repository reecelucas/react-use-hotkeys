{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "outDir": "lib",
    "lib": ["es2018", "dom"],
    "skipLibCheck": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "esm"
  ]
}
